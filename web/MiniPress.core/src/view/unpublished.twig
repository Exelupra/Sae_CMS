{% extends 'header.twig' %}

{% block title %}Article non publi√©s{% endblock %}

{% block content %}
    {% for article in articles %}
        <div class="card">
            <div class="card-body">
                <a href="{{ url_for('articleById', {article.id}) }}"><h2 class="card-title">{{ article.titre }}</h2></a>
                <p class="card-text">{{ article.resume }}</p>
                <a href="{{ path_for('publishArticle', {'id': article.id}) }}" class="btn btn-primary">Publier</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}