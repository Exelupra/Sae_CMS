{% extends 'header.twig' %}

{% block content %}
<form action="{{ url_for('inscriptionProcess') }}" method="POST">
    <h1>Inscription</h1>
    <label for="mail">Email :</label>
    <input type="email" id="mail" name="mail" required>

    <label for="mdp">Mot de passe :</label>
    <label for="mdp"><input type="password" id="mdp" name="mdp" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{10,}$" required>

    <input type="hidden" name="csrf" value="{{ csrf }}">


    <input type="submit" value="Se connecter">


{% endblock %}