{% extends 'header.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    <form method="post" action="{{ url_for('madeArticle') }}">
        <input type="hidden" name="csrf" value="{{ data.csrf }}">

        <label for="titre">Titre</label>
        <input type="text" name="titre" id="titre" required/><br>
        
        <label for="resume">Résumé</label>
        <input type="text" name="resume" id="resume" required/><br>
        
        <label for="contenu">Contenu</label>
        <textarea name="contenu" id="contenu" required></textarea><br>
        
        <label for="image">Lien vers l'image (si il y en a une)</label>
        <input type="text" name="image" id="image"/><br>
        
        <label for="categorie">Catégorie</label>
        <select name="categorie" id="categorie">
            {% for categorie in categories %}
                <option value="{{ categorie.id }}">{{ categorie.libelle }}</option>
            {% endfor %}
        </select>
        
        <label for="auteur">Auteur</label>
        <select name="auteur" id="auteur">
            {% for user in users %}
                <option value="{{ user.id }}">{{ user.mail }}</option>
            {% endfor %}
        </select><br>

        <input type="submit" name="action" value="Créer l'article">
        <input type="submit" name="action" value="Créer et publier l'article">
    </form>
{% endblock %}